<div style="border-radius: 10px">
    <div style="background-color: #3276b1;color:white; padding:10px">
        Book Details
    </div>
    <div style="border: 1px solid #3276b1;">
        <table id="" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
          
                <tr>
                    <td> Book Name</td>
                    <td> Book Description</td>
                </tr>
           
            <tr>
                <td>Concepts Of Physics</td>
                <td>Book Description :Concepts Of Physics</td>
            </tr>
        </table>
    </div>

        <div style="">

            <div style="background-color: #3276b1;color:white; padding:10px">
                Book Issue Details
            </div>
            <div style="border: 1px solid #3276b1;padding:20px">
                Book issue to   &nbsp;
                Student <input type="radio" checked value="Student" />
                &nbsp;
                Teacher   <input type="radio" value="Teacher" />
                &nbsp;
                Staff   <input type="radio" value="Staff" />
                &nbsp;
                <br /> <br />
                <div>
                    <div class="row">
                        <div class="col-md-3">
                            Student Name :  <input type="text" class="form-control" />
                        </div>
                        <div class="col-md-3">
                            Student Class :  <input type="text" class="form-control" />
                        </div>
                        <div class="col-md-3">
                            Roll Number :  <input type="text" class="form-control" />
                        </div>
                        <div class="col-md-3" style="margin-top:30px;">
                            <a onclick="searchStudents()" style="color: white; padding: 5px; background-color: #3276b1">Search</a>
                        </div>
                    </div>
                    <br /> <br />
                    <div id="dvGridStudent" style="width:90%; margin:0 auto; display:none;">
                        <table id="studentGrid" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Student Name</th>
                                    <th>Registration Number</th>
                                    <th>Standard</th>
                                    <th>RollNo</th>
                                    <th>MobileNo</th>
                                    <th></th>

                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <script>
        function searchStudents() {

            $("#dvGridStudent").show();

            $("#studentGrid").DataTable({

                "processing": true,
                "filter": true,
                "orderMulti": false,
                "pageLength": 10,
                "order": [[1, 'asc']],
                "ajax": {
                    "url": "/User/LoadStudents",
                    "type": "POST",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "studentName", "autoWidth": true },
                    { "data": "registrationNumber", "autoWidth": true },
                    { "data": "className", "autoWidth": true },
                    { "data": "rollNumber", "autoWidth": true },
                    { "data": "mobileNumber", "autoWidth": true },
                    {
                        "render": function (data, type, full, meta) { return '<a role="button" data-toggle="modal" data-target="#modalBorrowBook" aria-pressed="true" background-color: "#2e4b90"; class="btn btn-info btn-primary">Borrow Book</a>'; }
                    }
                ]

            });
        }
    </script>
