@model IEnumerable<RabbitApplication.Models.MyJobApplicationsModel>

@{
	ViewData["Title"] = "Job Apply Success";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<main id="main">
	<br /><br />
	<section id="values" class="values">
		<div class="container" data-aos="fade-up">

			<div class="row">
				<div class="col-lg-12" data-aos="fade-up" data-aos-delay="200">
					<div class="box">
						<header class="section-header">
							<p>Job Applications</p>
							<br />

						</header>
						<div>
							<table class="table" style="width:100%">
								<thead>
									<tr class="btn-primary">
										<th>
											Candidate Name
										</th>
										<th>
											Job Profile
										</th>
										<th>
											Status
										</th>
										<th>
											Submitted Date
										</th>
										<th>
											Acknowdlegement No
										</th>
										<th></th>
									</tr>
								</thead>
								<tbody>
									@if (Model != null)
									{	@foreach (var item in Model)
										{
											<tr>
												<td>
													@Html.DisplayFor(modelItem => item.CandidateName)
												</td>

												<td>
													@Html.DisplayFor(modelItem => item.JobProfileName)
												</td>

												<td>
													@Html.DisplayFor(modelItem => item.Status)
												</td>
												<td>
													@Html.DisplayFor(modelItem => item.JobApplicationDate)
												</td>
												<td>
													@Html.DisplayFor(modelItem => item.AkNo)
												</td>
                                                <td>
                                                    <a href="@Url.Action("AdminDetails","Candidate", new { @id = item.CandidateJobProfileMappingId})">View</a>
                                                    <a style="background-color: antiquewhite; border: 1px solid antiquewhite; padding: 4px" href="@Url.Action("DownloadFiles","Candidate", new { @id = item.CandidateId})"> Files</a>
													|
                                                    <a style="background-color: antiquewhite; border: 1px solid antiquewhite; padding: 4px" href="@Url.Action("DownloadDetails","Candidate", new { @id = item.CandidateId})"> Details</a>
													
                                                </td>
											</tr>
										}

									}

								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
</main>



