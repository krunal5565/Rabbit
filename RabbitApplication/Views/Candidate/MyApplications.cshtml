@model IEnumerable<RabbitApplication.Models.MyJobApplications>

@{
	ViewData["Title"] = "Job Apply Success";
	Layout = "~/Views/Shared/_GuestLayout.cshtml";
}

<main id="main">
	<br /><br />
	<section id="values" class="values">
		<div class="container" data-aos="fade-up">

			<div class="row">
				<div class="col-lg-12" data-aos="fade-up" data-aos-delay="200">
					<div class="box">
						<header class="section-header">
							<p>My Job Applications</p>
							<br />

						</header>
						<div>
							<table class="table" style="width:100%">
								<thead>
									<tr style="background-color:#ddd">
										<th>
											Job Profile
										</th>
										<th>
											Status
										</th>
										<th>
											Submitted Date
										</th>
										<th>
											Acknowdlegement No
										</th>
										<th></th>
									</tr>
								</thead>
								<tbody>
									@if (Model != null)
									{	@foreach (var item in Model)
										{
											<tr>
												<td>
													@Html.DisplayFor(modelItem => item.JobProfileName)
												</td>

												<td>
													@Html.DisplayFor(modelItem => item.Status)
												</td>
												<td>
													@Html.DisplayFor(modelItem => item.JobApplicationDate)
												</td>
												<td>
													@Html.DisplayFor(modelItem => item.AkNo)
												</td>
												<td>
													<a href="@Url.Action("Details","Candidate", new { @id = item.CandidateJobProfileMappingId})" >View</a>
												</td>
											</tr>
										}

									}

								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
</main>



