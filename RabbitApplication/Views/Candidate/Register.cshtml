@model RabbitApplication.Models.RegistrationModel
@{
	ViewData["Title"] = "Register";
	Layout = "~/Views/Shared/_CandidateLayout.cshtml";
}

<div class="container">
	<main role="main" class="pb-3">

		<h1>Register</h1>

		<div class="row">
			<div class="col-md-4">
				<form id="registerForm" method="post" action="@Url.Action("Register", "Candidate")" novalidate="novalidate">
					<h4>Create a new account.</h4>
					<hr>

					<div class="form-group">
						<label for="Input_Email">Email</label>
						@Html.TextBoxFor(m=>m.Email, new { @class = "form-control"})

					</div>
					<div class="form-group">
						<label for="Input_Password">Password</label>
						@Html.TextBoxFor(m=>m.Password, new { @class = "form-control"})

					</div>
					<div class="form-group">
						<label for="Input_ConfirmPassword">Confirm password</label>
						@Html.TextBoxFor(m=>m.ConfirmPassword, new { @class = "form-control"})

					</div>
					<button id="registerSubmit" type="submit" class="btn btn-primary">Register</button>


				</form>
			</div>
		</div>
	</main>
</div>



