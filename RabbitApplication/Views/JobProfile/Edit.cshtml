@model RabbitApplication.Models.JobProfileModel

@{
	ViewData["Title"] = "Edit";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
	.note-editor.note-airframe .note-editing-area .note-editable, .note-editor.note-frame .note-editing-area .note-editable {
		padding: 10px;
		overflow: auto;
		word-wrap: break-word;
		background-color: white;
		border: 1px solid #ddd;
	}

	..btn-default.active, .btn-default:active, .open > .dropdown-toggle.btn-default
	{
		background-color: #e6e6e6;
	}

	.note-btn-group btn-group note-style .note-btn-group btn-group note-style
	{
		background-color:white;
		border:1px solid #ddd;

	}
	.note-btn {
		border-color: #ccc;
	}

	.note-toolbar{
		background-color: #f5f5f5;
	}
</style>

<div style="padding-left:50px">
	<h4>Edit JobProfile</h4>
	<hr />
	<form asp-action="Edit">
		<div class="row">
			<div class="col-md-4">

				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<input type="hidden" asp-for="Id" />
				<input type="hidden" asp-for="JobProfileId" />

				<div class="form-group">
					<label asp-for="Name" class="control-label"></label>
					<input asp-for="Name" class="form-control" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>

				<div class="form-group">
					<label asp-for="NumberOfPositions" class="control-label"></label>
					<input asp-for="NumberOfPositions" class="form-control" />
					<span asp-validation-for="NumberOfPositions" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="StartDate" class="control-label"></label>
					<input asp-for="StartDate" class="form-control" />
					<span asp-validation-for="StartDate" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="EndDate" class="control-label"></label>
					<input asp-for="EndDate" class="form-control" />
					<span asp-validation-for="EndDate" class="text-danger"></span>
				</div>

				<div class="form-group">
					<input type="submit" value="Save" class="btn btn-primary" />
				</div>

			</div>

			<div class="col-md-7">
				<div class="form-group">
					<label asp-for="Description" class="control-label"></label>
					@Html.TextAreaFor(m=>m.Description , new {@class = "form-control summernote", @id="summernote"})
				</div>
			</div>


		</div>

		<div>
			<a asp-action="Index">Back to List</a>
		</div>
	</form>
</div>

<script>
	$(document).ready(function() {
		$('#summernote').summernote();
	});
</script>